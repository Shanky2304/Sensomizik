<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <com.github.florent37.bubbletab.BubbleTab
            android:id="@+id/bubbleTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:background="@android:color/white"
            android:elevation="11dp"

            app:bubbleTab_circleColor="#ff6619"
            app:bubbleTab_circleRatio="1.25"
            app:bubbleTab_image0="@drawable/ic_playlist"
            app:bubbleTab_image1="@drawable/ic_home"/>





    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />




</LinearLayout>
