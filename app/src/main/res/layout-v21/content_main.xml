<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frame_main"
    android:background="#212121"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="alrightsolutions.example.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lview"
        android:layout_width="match_parent"
        android:layout_marginBottom="95dp"
        android:layout_height="wrap_content" />
   <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="10dp"
       android:layout_marginBottom="95dp"

       android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="30dp"
           android:layout_gravity="left"
           android:layout_height="40dp"
           android:id="@+id/setting_image"
           android:layout_marginLeft="10dp"
           android:paddingTop="10dp"
           android:src="@drawable/ic_settings_white_24dp"/>
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_weight="2"
           android:id="@+id/card_reveal"
           android:layout_marginLeft="10dp"
           android:visibility="invisible"
           app:cardCornerRadius="0dp"
           android:layout_marginRight="10dp"
           app:cardElevation="6dp"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_margin="8dp"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/ic_search_black_24dp"/>
           <EditText
               android:layout_width="match_parent"
               android:hint="Search.."
               android:fontFamily="sans-serif"
               android:id="@+id/searchEdittext"
               android:background="@android:color/transparent"
               android:singleLine="true"
               android:layout_marginLeft="10dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
              />

           </LinearLayout>
       </android.support.v7.widget.CardView>

       <ImageView
           android:layout_width="30dp"
           android:layout_gravity="right"
           android:layout_height="40dp"
           android:paddingTop="10dp"
           android:id="@+id/search_image"
           android:layout_marginRight="10dp"
           android:src="@drawable/ic_search_white_24dp"/>
   </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@drawable/ripple_blue_effect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="30dp"
    android:id="@+id/linears"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Music Name"
    android:textSize="20sp"
    android:layout_marginLeft="90dp"
    android:id="@+id/music_name"
    android:singleLine="true"
    android:fontFamily="sans-serif"
    android:textColor="#fff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Artist"
        android:textSize="15sp"
        android:layout_marginLeft="90dp"
        android:id="@+id/music_artist"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:textColor="#bfe0e0e0"/>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/previous"
            android:layout_gravity="left"
            android:src="@drawable/arrow_left"/>
    <android.support.v7.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:thumbTint="#26c6da"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:transitionName="seekbar"
        android:progressTint="#26c6da"
        android:progressBackgroundTint="#bfe0e0e0"
        android:layout_height="wrap_content"
        android:id="@+id/appCompatSeekBar" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next"
            android:layout_gravity="right"
            android:src="@drawable/ic_play_arrow_white_24dp"/>
    </FrameLayout>
</LinearLayout>
</RelativeLayout>


</RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_marginLeft="60dp"
        android:transitionName="playButton"
        android:layout_height="60dp"
        app:layout_anchor="@+id/linears"
        app:layout_anchorGravity="top|left"
        android:src="@drawable/ic_play_arrow_white_24dp" />
</android.support.design.widget.CoordinatorLayout>